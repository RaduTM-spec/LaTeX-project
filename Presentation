\section{Noțiuni}
\begin{frame}
\frametitle{Pe scurt...}
\begin{enumerate}[<+-| alert@+>]
    \item QuickSort
    \begin{itemize}
        \item cel mai eficient 
        \item pe orice set de date
    \end{itemize}
    \item MergeSort 
    \begin{itemize}
        \item la fel de eficient ca quicksort pe seturi mari de date [$>10^7$]
        \item neeficient pe seturi mici de date
    \end{itemize}
     \item InsertionSort 
    \begin{itemize}
        \item la fel de eficient ca quicksort pe seturi mici de date [10,100]
        \item neeficient pe seturi mari de date
    \end{itemize}
      \item BubbleSort 
    \begin{itemize}
        \item cel mai neeficient
        \item pe orice set de date
    \end{itemize}
\end{enumerate}
\end{frame}




\begin{frame}[fragile]
\frametitle{Implementare ușoară QuickSort în Python}

\begin{lstlisting}[language=Python]
def quicksort(arr):
    if arr: 
        pivot = arr[0];
        below = [i for i in arr[1:] if i < pivot] 
        above = [i for i in arr[1:] if i >= pivot]
        return quicksort(below) + [pivot] +
               quicksort(above);
    else: 
        return arr;
\end{lstlisting}
\end{frame}
